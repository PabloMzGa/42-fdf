{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build all C and A files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/**/*.c",
                "${workspaceFolder}/**/**/*.c",
				"${workspaceFolder}/src/render/**/*.c",
                "${workspaceFolder}/lib/**/**/*.a",
                "${workspaceFolder}/lib/libft/src/*.c",
                "${workspaceFolder}/lib/libft/src/**/*.c",
                "${workspaceFolder}/lib/libft/src/**/**/*.c",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/lib/MLX42/include",
                "-I${workspaceFolder}/lib/MLX42/include/MLX42",
                "-I${workspaceFolder}/lib/MLX42/include/lodepng",
                "-I${workspaceFolder}/lib/MLX42/include/glad",
                "-I${workspaceFolder}/lib/MLX42/include/KHR",
                "-I${workspaceFolder}/lib/libft/include",
                "-I${workspaceFolder}/lib/libft/include/ft_printf",
                "-I${workspaceFolder}/lib/libft/include/ft_get_next_line",
                "-I${workspaceFolder}/maps",
                "-lglfw", //Añade la biblioteca de glfw que sirve para contextos y OpenGL
                "-lm", //Añade la biblioteca de math.h
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
